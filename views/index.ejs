<!DOCTYPE html>
<html lang="en">
    <%- include('head.ejs', {title : '租屋網大集合'}) %>
    <body>
        <%- include('navigation.ejs') %>
        <!-- Header -->
        <header class="bg-dark py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="text-center text-white">
                    <h1 class="display-4 fw-bolder">租屋網大集合</h1>
                    <p class="lead fw-normal text-white-50 mb-0">讓你一次比較～全～部～的房地產物件～～</p>
                </div>
                <div class="row justify-content-center my-2">
                  <div class="col-7 bg-white py-2 card rounded">
                    <div class="row justify-content-start">
                        <div class="col-4 " role="tw-city-selector" data-bootstrap-style></div>
                        <div class="col-4">
                          <%- include('filter.ejs', {name : 'type', title : '型態', options : ['整層住家','獨立套房','分租套房','雅房','店面','住辦','商用','廠房','車位','土地','其他']}); %>
                          <%- include('filter.ejs', {name : 'price', title : '租金', options : ['5000以下','5000~10000','10000~20000','20000~30000','30000~50000','50000以上']}); %>
                        </div>
                        <div class="col-4 p-3">
                            <button id="submitBtn" type="submit" class="btn round bg-light w-100 h-100">搜尋</button>
                        </div>
                    </div>
                  </div>
                </div>
            </div>
        </header>
        <!-- Section-->
        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    <% for (var i = 0; i < houses.length; i++) { %> 
                        <%- include('house_item.ejs', { house : houses[i] }); %> 
                    <% } %>
                </div>
            </div>
        </section>
        <%- include('footer.ejs') %>
        <script>
            new TwCitySelector();
            $(document).ready(function() {
                $('#submitBtn').click(function() {
                    const countyValue = $('#county').val();
                    const districtValue = $('#district').val();
                    const typeValue = $('#type').val();
                    const priceValue = $('#price').val();

                    // make AJAX request to backend API
                    $.ajax({
                    type: 'POST',
                    url: '/submit',
                    data: {
                        county: countyValue,
                        district: districtValue,
                        type: typeValue,
                        price: priceValue
                    },
                    success: function(response) {
                        console.log(response);
                        // handle successful response from backend
                    },
                    error: function(error) {
                        console.log(error);
                        // handle error response from backend
                    }
                    });
                });
            });
        </script>
    </body>
</html>